<Window x:Class="BilderbergImport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BilderbergImport"
        xmlns:vm="clr-namespace:BilderbergImport.ViewModels"
        mc:Ignorable="d"
        Title="Meeting Data Importer" 
        Height="900" 
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Converters -->
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:CountToBooleanConverter x:Key="CountToBooleanConverter" />

        <!-- Styles -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F5F5F5" />
                    <Setter Property="Foreground" Value="#888888" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0" />
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Meeting Data Importer" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" />

        <!-- Step 1: Import Meetings & Topics -->
        <Border Grid.Row="1" 
                BorderBrush="#4CAF50" 
                BorderThickness="2" 
                CornerRadius="5" 
                Padding="15"
                Margin="0,0,0,15"
                Background="#F1F8E9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Step 1: Import Meetings &amp; Topics" 
                           FontWeight="Bold" 
                           FontSize="16"
                           Margin="0,0,0,10"
                           Foreground="#2E7D32" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                Orientation="Vertical">
                        <TextBlock Text="Paste HTML with meetings:" 
                                   Margin="0,0,0,5" />
                        <TextBox Text="{Binding MeetingsHtml, UpdateSourceTrigger=PropertyChanged}" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="150"
                                 Padding="8"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 VerticalContentAlignment="Top" />
                        <TextBlock Text="Note: Paste HTML containing meeting dates and topics" 
                                   FontStyle="Italic"
                                   Foreground="#666"
                                   Margin="0,5,0,0"
                                   FontSize="11" />
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Command="{Binding ImportMeetingsCommand}" 
                            Content="Import Meetings &amp; Topics" 
                            Padding="20,10"
                            Margin="20,0,0,0"
                            FontWeight="Bold"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderBrush="#388E3C"
                            BorderThickness="1"
                            VerticalAlignment="Top" />
                </Grid>

                <TextBlock Grid.Row="2"
                           Text="Format expected: &lt;h2&gt;18-20 September 1959 Yesilkoy, Turkey&lt;/h2&gt;&lt;ul&gt;&lt;li&gt;Topic 1&lt;/li&gt;&lt;li&gt;Topic 2&lt;/li&gt;&lt;/ul&gt;"
                           FontStyle="Italic"
                           Foreground="#666"
                           Margin="0,10,0,0"
                           FontSize="11" />
            </Grid>
        </Border>

        <!-- Step 2: Import Participants -->
        <Border Grid.Row="2" 
        BorderBrush="#2196F3" 
        BorderThickness="2" 
        CornerRadius="5" 
        Padding="15"
        Margin="0,0,0,15"
        Background="#E3F2FD">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                   Text="Step 2: Import Participants" 
                   FontWeight="Bold" 
                   FontSize="16"
                   Margin="0,0,0,10"
                   Foreground="#1565C0" />

                <StackPanel Grid.Row="1" 
                    Orientation="Vertical"
                    Margin="0,0,0,15">
                    <TextBlock Text="Select Meeting:" 
                       Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding Meetings}"
                      SelectedItem="{Binding SelectedMeeting}"
                      DisplayMemberPath="DisplayName"
                      Width="500"
                      Height="35"
                      Padding="8"
                      FontSize="14"
                      IsEnabled="{Binding Meetings.Count, Converter={StaticResource CountToBooleanConverter}}">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="ToolTip" Value="Select a meeting to associate participants with" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="ToolTip" Value="No meetings available. Please import meetings first." />
                                        <Setter Property="Background" Value="#F5F5F5" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                        Orientation="Vertical">
                        <TextBlock Text="Paste HTML with participants:" 
                           Margin="0,0,0,5" />
                        <TextBox Text="{Binding ParticipantsHtml, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="150"
                         Padding="8"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalContentAlignment="Top" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                        Orientation="Vertical"
                        Margin="20,0,10,0">
                        <TextBlock Text="Import Format:" 
                           Margin="0,0,0,5"
                           FontWeight="Bold" />
                        <Button Command="{Binding ImportParticipantsCommand}" 
                        Content="Text Format" 
                        Padding="15,10"
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Background="#2196F3"
                        Foreground="White"
                        BorderBrush="#1976D2"
                        BorderThickness="1"
                        ToolTip="Use for: LastName, FirstName (CountryCode), Title format" />

                        <Button Command="{Binding ImportParticipantsFromTableCommand}" 
                        Content="Table Format" 
                        Padding="15,10"
                        FontWeight="Bold"
                        Background="#0097A7"
                        Foreground="White"
                        BorderBrush="#00838F"
                        BorderThickness="1"
                        ToolTip="Use for HTML tables with CountryCode, Name, Title columns" />
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                       Text="&lt;-- Choose format based on your HTML"
                       FontStyle="Italic"
                       Foreground="#666"
                       Margin="10,0,0,0"
                       Width="200"
                       TextWrapping="Wrap" />
                </Grid>

                <TextBlock Grid.Row="3"
                   Text="Text format expected: &lt;br&gt;Abrams, Stacey (USA), CEO, Sage Works Production&lt;br&gt;"
                   FontStyle="Italic"
                   Foreground="#666"
                   Margin="0,10,0,5"
                   FontSize="11" />

                <TextBlock Grid.Row="4"
                   Text="Table format expected: &lt;table&gt;&lt;tr&gt;&lt;td&gt;USA&lt;/td&gt;&lt;td&gt;Abrams, Stacey&lt;/td&gt;&lt;td&gt;CEO, Sage Works Production&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;"
                   FontStyle="Italic"
                   Foreground="#666"
                   Margin="0,0,0,0"
                   FontSize="11" />
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,15">
            <Button Command="{Binding LoadDataCommand}" 
                    Content="Refresh Data" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="#607D8B"
                    Foreground="White"
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}" />
            <Button Command="{Binding ClearDatabaseCommand}" 
                    Content="Clear All Data" 
                    Padding="15,8" 
                    Background="#F44336" 
                    Foreground="White"
                    BorderBrush="#D32F2F"
                    IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}" />
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Status: " 
                               FontWeight="Bold" 
                               Margin="0,0,5,0" />
                    <TextBlock Text="{Binding Status}" 
                               VerticalAlignment="Center" />
                </StackPanel>

                <ProgressBar Grid.Column="1" 
                             Width="150" 
                             Height="20"
                             IsIndeterminate="True" 
                             Visibility="{Binding IsImporting, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </Border>

        <!-- Tab Control for Data Display -->
        <TabControl Grid.Row="5" 
                    Margin="0,15,0,0">

            <!-- Participants Tab -->
            <TabItem Header="Participants">
                <DataGrid ItemsSource="{Binding Participants}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="First Name" 
                                            Binding="{Binding FirstName}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Last Name" 
                                            Binding="{Binding LastName}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Title" 
                                            Binding="{Binding Title}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Country Code" 
                                            Binding="{Binding CountryCode}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Meetings" 
                                            Binding="{Binding MeetingParticipants.Count}" 
                                            Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Meetings Tab -->
            <TabItem Header="Meetings">
                <DataGrid ItemsSource="{Binding Meetings}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Year" 
                                            Binding="{Binding Year}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="From Date" 
                                            Binding="{Binding FromDate, StringFormat=yyyy-MM-dd}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="To Date" 
                                            Binding="{Binding ToDate, StringFormat=yyyy-MM-dd}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Location" 
                                            Binding="{Binding Location}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Description" 
                                            Binding="{Binding Description}" 
                                            Width="2*" />
                        <DataGridTextColumn Header="Topics" 
                                            Binding="{Binding MeetingTopics.Count}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Participants" 
                                            Binding="{Binding MeetingParticipants.Count}" 
                                            Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Meeting Topics Tab -->
            <TabItem Header="Meeting Topics">
                <DataGrid ItemsSource="{Binding MeetingTopics}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Meeting ID" 
                                            Binding="{Binding MeetingId}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Meeting Year" 
                                            Binding="{Binding Meeting.Year}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Topic" 
                                            Binding="{Binding Topic}" 
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Topic Subtopics">
                <DataGrid ItemsSource="{Binding MeetingTopicSubTopics}" 
              AutoGenerateColumns="False" 
              CanUserAddRows="False"
              IsReadOnly="True"
              SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                Binding="{Binding Id}" 
                                Width="Auto" />
                        <DataGridTextColumn Header="Topic ID" 
                                Binding="{Binding TopicId}" 
                                Width="Auto" />
                        <DataGridTextColumn Header="Main Topic" 
                                Binding="{Binding MeetingTopic.Topic}" 
                                Width="*" />
                        <DataGridTextColumn Header="Meeting Year" 
                                Binding="{Binding MeetingTopic.Meeting.Year}" 
                                Width="Auto" />
                        <DataGridTextColumn Header="Subtopic" 
                                Binding="{Binding Topic}" 
                                Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- Meeting Participants Tab -->
            <TabItem Header="Meeting Participants">
                <DataGrid ItemsSource="{Binding MeetingParticipants}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Meeting Year" 
                                            Binding="{Binding Meeting.Year}" 
                                            Width="Auto" />
                        <DataGridTextColumn Header="Meeting Location" 
                                            Binding="{Binding Meeting.Location}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Participant Name" 
                                            Width="*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Participant.FirstName" />
                                    <Binding Path="Participant.LastName" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Participant Title" 
                                            Binding="{Binding Participant.Title}" 
                                            Width="*" />
                        <DataGridTextColumn Header="Country Code" 
                                            Binding="{Binding Participant.CountryCode}" 
                                            Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>